  var insertQuery ='INSERT INTO replies (post_id, username, content)VALUES(?, ?, ?)';
  connection.query(insertQuery, [postId, username, content], function(err)
  {
    if(err){
      console.log('[insertQuery错误]'+ err);
      res.json({"message":"错误"});
      console.log(req.body);
    } else {
      res.json({"message":"成功回复"});
    }
  });
  
})
// 路由：加载更多投票
app.get('/load-more-votings', (req, res) => {
  const page = parseInt(req.query.page) || 1;
  const pageSize = 5; // 每次加载的投票数量
  const offset = (page - 1)*pageSize;
  const countQuery = 'SELECT COUNT(*) AS total FROM Polls'

  // 执行查询
  const query = 'SELECT * FROM Polls LIMIT ? OFFSET ?';
  connection.query(countQuery,(error, pageresults)=>{
    if (error) {
      console.error('Error querying records count:', error);
      return res.status(500).json({error:'An error occured while querying the records count.'})
    }

    const totalRecords = pageresults[0].total;
    const totalPages = Math.ceil(totalRecords/pageSize);

    connection.query(query, [pageSize, offset], (err, results) => {
      if (err) {
        // 处理错误
        res.status(500).json({ error: 'An error occurred' });
      } 
      console.log(results)
      res.json({
        totalPages: totalPages,
        polls:results
      });
    });
  })

});

// 路由：加载投票选项
app.get('/load-option', (req, res) => {
  const pollId = req.query.poll_id;
  // 执行选项查询
  const query = `
    SELECT * FROM Options
    WHERE poll_id = ?
  `;
  connection.query(query, [pollId], (err, results) => {
    if (err) {
      // 处理错误
      res.status(500).json({ error: 'An error occurred' });
    } else {
      // 返回查询到的选项数据
      res.json(results);
    }
  });
});

//投上一票
app.post('/vote-option', (req, res) => {
  const optionId = req.body.optionId;
  
  const updateQuery = 'UPDATE Options SET vote_count = IFNULL(vote_count, 0)+ 1 WHERE id = ?';
  connection.query(updateQuery, [optionId], (err, updateResult) => {
    if (err) {
      res.status(500).json({ error: 'An error occurred' });
    } else {
      console.log(updateResult);
      const selectQuery = 'SELECT vote_count FROM Options WHERE id = ?';
      connection.query(selectQuery, [optionId], (err, selectResult) => {
        if (err) {
          res.status(500).json({ error: 'An error occurred' });
        } else {
          const voteCount = selectResult[0].vote_count;
          res.json({ vote_count: voteCount });
        }
      });
    }
  });
});

// 监听端口
app.listen(config.port, function() {
    console.log('服务器已启动，运行在\\'+config.database.host+':'+config.port);
  });


